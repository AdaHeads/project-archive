package body Receptions.Conditions is
   function "&" (Left, Right : in     Instance) return Instance is
   begin
      return Result : Instance do
         for E of Left loop
            Result.Append (E);
         end loop;

         for E of Right loop
            Result.Append (E);
         end loop;
      end return;
   end "&";
end Receptions.Conditions;
